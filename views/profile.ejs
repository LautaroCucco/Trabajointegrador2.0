<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partials/head.ejs')  %> 

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %> 
	<% } else { %>
	 <%- include('./partials/headerNoLogueado')  %>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= perfil.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= perfil.nombre %>   
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li class="listItems"><%= perfil.descripcion %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Autos posteados</h2>
			</div>

			<!-- Show mis productos -->
			<% for (let i = 0; i < perfil.producto.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos">
							<figure class="product-box_image">
								<img src="<%= perfil.producto[i].photo %>" alt="Autos">
							</figure>
							<article class="product-box_data">
								<h2><%= perfil.producto[i].model %></h2>
								<p><%= perfil.producto[i].description %></p>
								<p>Cantidad de comentarios: <%= perfil.producto[i].comentario.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>	
</html>
