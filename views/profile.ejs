<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('./partes/head.ejs')  %> 

<body>
	<!-- Header -->
	<%if (logueado){%>
		<%- include("./partes/headerLogueado.ejs") %>
		<%} else { %>
		<%- include("./partes/headerNoLogueado.ejs") %>
	<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.fotoDePerfil%>  " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.nombreDeUsuario %>   
						<a href="/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li class="listItems"><%=usuario.fechaDeNacimiento%> </li>
						<li class="listItems"><%=usuario.email %> </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Autos posteados</h2>
			</div>

			<!-- Show mis productos -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos">
							<figure class="product-box_image">
								<img src="<%= productos[i].imagen %>"  alt="Autos">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[i].nombre  %>  </h2>
								<p> <%= productos[i].descripcion %> </p>
								<p><%= comentarios[i] %> </p>
							</article>
						</a>
					</section>
				</div>
				<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>	
</html>